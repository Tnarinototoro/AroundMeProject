<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#22000000"
    android:padding="8dp">

    <ImageView
        android:id="@+id/notif_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/diy_ic_alien_head" />

    <TextView
        android:id="@+id/notif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/notif_avatar"
        android:layout_marginStart="12dp"
        android:text="UNKNOWN SIGNAL"
        android:textColor="#00FF00"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/notif_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notif_title"
        android:layout_toEndOf="@id/notif_avatar"
        android:layout_marginStart="12dp"
        android:text="Intercepting alien message..."
        android:textColor="#CC00FF00"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/notif_bg_pattern"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:alpha="0.5"
        android:src="@drawable/diy_ic_wave_pattern" />
</RelativeLayout>