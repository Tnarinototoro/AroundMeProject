<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.aroundmelib.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/Operation_Panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 选图按钮 -->
        <Button
            android:id="@+id/button_pickpic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick" />

        <Button
            android:id="@+id/button_scan_peers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan WiFi Direct Peers" />
        <!-- TCP 端口配置 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TCP Port:" />

            <EditText
                android:id="@+id/edit_tcp_port"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="8988" />
        </LinearLayout>

        <!-- WiFi Direct 调试信息 -->
        <HorizontalScrollView
            android:id="@+id/wfd_horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scrollbars="horizontal|vertical">

            <ScrollView
                android:id="@+id/wfd_vertical_scroll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/text_wfd_debug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WFD: idle" />
            </ScrollView>

        </HorizontalScrollView>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/panel_peers"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#222222">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nearby WiFi Direct Devices:"
            android:textColor="#ffffff"/>

        <ListView
            android:id="@+id/list_peers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>



    <View
        android:id="@+id/divider_y2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#000000"/>

    <LinearLayout
        android:id="@+id/bypass_panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- 发送区 -->
        <LinearLayout
            android:id="@+id/panel_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_send_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send → To: [Test]" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical|horizontal">

                <ImageView
                    android:id="@+id/image_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:contentDescription="Sent image preview"/>
            </ScrollView>
        </LinearLayout>

        <!-- 中间分隔条 -->
        <View
            android:id="@+id/divider_x"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#000000"/>

        <!-- 接收区 -->
        <LinearLayout
            android:id="@+id/panel_receive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_receive_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="← Received From: [Test]" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical|horizontal">

                <ImageView
                    android:id="@+id/image_receive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:contentDescription="Sent image preview"/>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>